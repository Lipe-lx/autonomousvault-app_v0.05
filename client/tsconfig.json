{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "module": "ESNext",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "types": [
            "node",
            "vite/client"
        ],
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "moduleDetection": "force",
        "allowJs": true,
        "jsx": "react-jsx",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "adapters/*": [
                "../adapters/*"
            ],
            "core/*": [
                "../core/*"
            ],
            "infra/*": [
                "../infra/*"
            ],
            "idb-keyval": [
                "./node_modules/idb-keyval"
            ],
            "@supabase/supabase-js": [
                "./node_modules/@supabase/supabase-js"
            ],
            "*": [
                "./node_modules/*"
            ]
        },
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "src",
        "vite.config.ts",
        "../adapters",
        "../core",
        "../infra"
    ]
}